{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@ipg/*": ["/app/*"],
      "@ipg/views/*": ["/app/views/*"],
      "@ipg/nodes/*": ["/app/nodes/*"],
      "@ipg/types/*": ["/app/types/*"],
      "@ipg/mocks/*": ["/app/mocks/*"],
      "@ipg/tests/*": ["/app/tests/*"],
      "@ipg/memos/*": ["/app/memos/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "** /*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
