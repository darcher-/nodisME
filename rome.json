{
	"$schema": "./node_modules/rome/configuration_schema.json",
	"formatter": {
		"enabled": true,
		"lineWidth": 80,
		"indentSize": 2,
		"indentStyle": "tab",
		"formatWithErrors": false
	},
	"files": {
		"ignore": [
			"\\.*/**/*",
			"dist/**/*",
			"lib/**/*",
			"node_modules/**/*",
			"public/**/*",
			"res/**/*"
		]
	},
	"javascript": {
		"formatter": {
			"quoteProperties": "preserve",
			"quoteStyle": "double",
			"semicolons": "asNeeded",
			"trailingComma": "es5"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"ignore": ["**/*tests?.{js,jsx}"]
	},
	"organizeImports": {
		"enabled": true
	}
}
